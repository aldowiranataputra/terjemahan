<body>
    <div class="translator-container">
        <div class="header">
            <h1 class="title">Penerjemah Bahasa</h1>
            <p class="subtitle">Terjemahkan antara Bahasa Indonesia dan Inggris dengan mudah</p>
        </div>

        <div class="translator-section">
            <div class="language-panel">
                <div class="language-header">
                    <div class="language-name">
                        <span class="flag" id="sourceFlag">ðŸ‡®ðŸ‡©</span>
                        <span id="sourceLang">Bahasa Indonesia</span>
                    </div>
                    <button class="clear-btn" onclick="clearSource()" title="Hapus teks">âœ–</button>
                </div>
                <textarea 
                    class="text-area" 
                    id="sourceText" 
                    placeholder="Ketik atau tempel teks yang ingin diterjemahkan..."
                    oninput="updateCharCount('source')"
                ></textarea>
                <div class="char-count" id="sourceCount">0 karakter</div>
            </div>

            <button class="swap-btn" onclick="swapLanguages()" title="Tukar bahasa">â‡†</button>

            <div class="language-panel">
                <div class="language-header">
                    <div class="language-name">
                        <span class="flag" id="targetFlag">ðŸ‡ºðŸ‡¸</span>
                        <span id="targetLang">English</span>
                    </div>
                    <button class="clear-btn" onclick="clearTarget()" title="Hapus teks">âœ–</button>
                </div>
                <textarea 
                    class="text-area" 
                    id="targetText" 
                    placeholder="Hasil terjemahan akan muncul di sini..."
                    readonly
                ></textarea>
                <div class="char-count" id="targetCount">0 karakter</div>
            </div>
        </div>

        <div class="loading" id="loading">
            Sedang menerjemahkan...
        </div>

        <div class="action-buttons">
            <button class="btn btn-primary" onclick="translateText()">Terjemahkan</button>
            <button class="btn btn-secondary" onclick="copyResult()">Salin Hasil</button>
            <button class="btn btn-secondary" onclick="clearAll()">Hapus Semua</button>
        </div>
    </div>

    <script>
        let isIndonesianToEnglish = true;

        // Dictionary untuk terjemahan dasar
        const dictionary = {
            // Indonesia ke Inggris
            'id_to_en': {
                'halo': 'hello',
                'selamat pagi': 'good morning',
                'selamat siang': 'good afternoon',
                'selamat malam': 'good evening',
                'terima kasih': 'thank you',
                'sama-sama': 'you\'re welcome',
                'maaf': 'sorry',
                'permisi': 'excuse me',
                'apa kabar': 'how are you',
                'baik-baik saja': 'fine',
                'nama saya': 'my name is',
                'senang bertemu dengan anda': 'nice to meet you',
                'sampai jumpa': 'goodbye',
                'ya': 'yes',
                'tidak': 'no',
                'mungkin': 'maybe',
                'saya': 'I',
                'anda': 'you',
                'dia': 'he/she',
                'kami': 'we',
                'mereka': 'they',
                'ini': 'this',
                'itu': 'that',
                'di sini': 'here',
                'di sana': 'there',
                'kapan': 'when',
                'di mana': 'where',
                'siapa': 'who',
                'apa': 'what',
                'mengapa': 'why',
                'bagaimana': 'how',
                'berapa': 'how much/how many',
                'rumah': 'house',
                'sekolah': 'school',
                'pekerjaan': 'work/job',
                'makanan': 'food',
                'air': 'water',
                'buku': 'book',
                'mobil': 'car',
                'waktu': 'time',
                'uang': 'money',
                'teman': 'friend',
                'keluarga': 'family',
                'cinta': 'love',
                'bahagia': 'happy',
                'sedih': 'sad',
                'besar': 'big',
                'kecil': 'small',
                'bagus': 'good',
                'buruk': 'bad',
                'baru': 'new',
                'lama': 'old',
                'panas': 'hot',
                'dingin': 'cold'
            },
            // Inggris ke Indonesia
            'en_to_id': {
                'hello': 'halo',
                'good morning': 'selamat pagi',
                'good afternoon': 'selamat siang',
                'good evening': 'selamat malam',
                'thank you': 'terima kasih',
                'you\'re welcome': 'sama-sama',
                'sorry': 'maaf',
                'excuse me': 'permisi',
                'how are you': 'apa kabar',
                'fine': 'baik-baik saja',
                'my name is': 'nama saya',
                'nice to meet you': 'senang bertemu dengan anda',
                'goodbye': 'sampai jumpa',
                'yes': 'ya',
                'no': 'tidak',
                'maybe': 'mungkin',
                'i': 'saya',
                'you': 'anda',
                'he': 'dia',
                'she': 'dia',
                'we': 'kami',
                'they': 'mereka',
                'this': 'ini',
                'that': 'itu',
                'here': 'di sini',
                'there': 'di sana',
                'when': 'kapan',
                'where': 'di mana',
                'who': 'siapa',
                'what': 'apa',
                'why': 'mengapa',
                'how': 'bagaimana',
                'house': 'rumah',
                'school': 'sekolah',
                'work': 'pekerjaan',
                'job': 'pekerjaan',
                'food': 'makanan',
                'water': 'air',
                'book': 'buku',
                'car': 'mobil',
                'time': 'waktu',
                'money': 'uang',
                'friend': 'teman',
                'family': 'keluarga',
                'love': 'cinta',
                'happy': 'bahagia',
                'sad': 'sedih',
                'big': 'besar',
                'small': 'kecil',
                'good': 'bagus',
                'bad': 'buruk',
                'new': 'baru',
                'old': 'lama',
                'hot': 'panas',
                'cold': 'dingin'
            }
        };

        function updateCharCount(type) {
            const textarea = document.getElementById(type + 'Text');
            const counter = document.getElementById(type + 'Count');
            const count = textarea.value.length;
            counter.textContent = count + ' karakter';
        }

        function clearSource() {
            document.getElementById('sourceText').value = '';
            updateCharCount('source');
        }

        function clearTarget() {
            document.getElementById('targetText').value = '';
            updateCharCount('target');
        }

        function clearAll() {
            clearSource();
            clearTarget();
        }

        function swapLanguages() {
            isIndonesianToEnglish = !isIndonesianToEnglish;
            
            const sourceFlag = document.getElementById('sourceFlag');
            const targetFlag = document.getElementById('targetFlag');
            const sourceLang = document.getElementById('sourceLang');
            const targetLang = document.getElementById('targetLang');
            const sourceText = document.getElementById('sourceText');
            const targetText = document.getElementById('targetText');
            
            if (isIndonesianToEnglish) {
                sourceFlag.textContent = 'ðŸ‡®ðŸ‡©';
                targetFlag.textContent = 'ðŸ‡ºðŸ‡¸';
                sourceLang.textContent = 'Bahasa Indonesia';
                targetLang.textContent = 'English';
                sourceText.placeholder = 'Ketik atau tempel teks yang ingin diterjemahkan...';
                targetText.placeholder = 'Hasil terjemahan akan muncul di sini...';
            } else {
                sourceFlag.textContent = 'ðŸ‡ºðŸ‡¸';
                targetFlag.textContent = 'ðŸ‡®ðŸ‡©';
                sourceLang.textContent = 'English';
                targetLang.textContent = 'Bahasa Indonesia';
                sourceText.placeholder = 'Type or paste text to translate...';
                targetText.placeholder = 'Translation result will appear here...';
            }
            
            // Swap text content
            const tempText = sourceText.value;
            sourceText.value = targetText.value;
            targetText.value = tempText;
            
            updateCharCount('source');
            updateCharCount('target');
        }

        function translateText() {
            const sourceText = document.getElementById('sourceText').value.trim();
            const targetTextarea = document.getElementById('targetText');
            const loading = document.getElementById('loading');
            
            if (!sourceText) {
                alert('Silakan masukkan teks yang ingin diterjemahkan.');
                return;
            }
            
            loading.classList.add('show');
            
            // Simulasi delay untuk menunjukkan loading
            setTimeout(() => {
                const dictKey = isIndonesianToEnglish ? 'id_to_en' : 'en_to_id';
                const dict = dictionary[dictKey];
                
                let result = sourceText.toLowerCase();
                
                // Cari dan ganti kata/frasa yang ada di dictionary
                for (const [key, value] of Object.entries(dict)) {
                    const regex = new RegExp('\\b' + key.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + '\\b', 'gi');
                    result = result.replace(regex, value);
                }
                
                // Jika tidak ada terjemahan yang ditemukan, berikan pesan
                if (result.toLowerCase() === sourceText.toLowerCase()) {
                    result = isIndonesianToEnglish ? 
                        '(Translation not available in dictionary - please use online translator service)' :
                        '(Terjemahan tidak tersedia dalam kamus - silakan gunakan layanan penerjemah online)';
                }
                
                targetTextarea.value = result;
                updateCharCount('target');
                loading.classList.remove('show');
            }, 1000);
        }

        function copyResult() {
            const targetText = document.getElementById('targetText');
            if (!targetText.value.trim()) {
                alert('Tidak ada hasil terjemahan untuk disalin.');
                return;
            }
            
            targetText.select();
            targetText.setSelectionRange(0, 99999); // For mobile devices
            
            try {
                document.execCommand('copy');
                alert('Hasil terjemahan telah disalin ke clipboard!');
            } catch (err) {
                alert('Gagal menyalin teks. Silakan salin secara manual.');
            }
        }

        // Auto-translate on Enter key (optional)
        document.getElementById('sourceText').addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                translateText();
            }
        });
    </script>
</body>
